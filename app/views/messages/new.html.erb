<!-- Validation failure messages -->
<% if @message.errors.any? %>
  <% @message.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Message</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_message" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for recipient_id -->
      <div class="form-group">
        <label for="recipient_id" class="control-label">
          Recipient
        </label>

        <input type="text" id="recipient_id" name="recipient_id" placeholder="Recipient" class="form-control" value="<%= @message.recipient_id %>">
      </div>

      <!-- Label and input for sender_id -->
      <div class="form-group">
        <label for="sender_id" class="control-label">
          Sender
        </label>

        <input type="text" id="sender_id" name="sender_id" placeholder="Sender" class="form-control" value="<%= @message.sender_id %>">
      </div>

      <!-- Label and input for message -->
      <div class="form-group">
        <label for="message" class="control-label">
          Message
        </label>

        <textarea id="message" name="message" placeholder="Message" class="form-control" rows="3"><%= @message.message %></textarea>
      </div>

      <!-- Label and input for read_status -->
      <div class="checkbox">
        <label for="read_status">
          <input type="checkbox" id="read_status" name="read_status" value="1" <%= "checked" if @message.read_status %>>
          Read status
        </label>
      </div>

      <button class="btn btn-success">
        Create Message
      </button>
      or
      <a href="/messages">Cancel</a>
    </form>
  </div>
</div>

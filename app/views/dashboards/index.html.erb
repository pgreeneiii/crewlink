<% page_header "Dashboard:" %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>Last Played Game</th>
        <th>Online Status</th>
        <th>In-Game Status</th>
        <th>Looking to play status</th>
      </tr>

      <tr>
        <th><%= current_user.username %></th>
        <% if current_user.last_played_game.nil? %>
         <th>Data Unavailable</th>
        <% else %>
        <th><%= Game.find_by(:app_id => current_user.last_played_game).title %></th>
        <% end %>
        <th><%= current_user.online_status %></th>
        <% if current_user.in_game_status.nil? %>
        <td>Welcome to Crewlink!</td>
        <% elsif current_user.in_game_status > 0 %>
        <td><%= Game.find_by(:app_id => current_user.in_game_status).title %></td>
        <% else %>
        <td>Not In Game</td>
        <% end %>
        <th><%= current_user.looking_to_play_status %></th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.username %></td>
        <% if friend.last_played_game.nil? %>
         <th>Data Unavailable</th>
        <% else %>
        <th><%= Game.find_by(:app_id => friend.last_played_game).title %></th>
        <% end %>
        <td><%= friend.online_status %></td>
        <% if friend.in_game_status > 0 %>
        <td><%= Game.find_by(:app_id => friend.in_game_status).title %></td>
        <% else %>
        <td>Not In Game</td>
        <% end %>
        <td><%= friend.looking_to_play_status %></td>
     </tr>
     <% end %>
   </table>
</div>
</div>
